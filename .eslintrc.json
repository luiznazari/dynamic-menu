{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-plusplus": "off",
    "no-bitwise": "off",
    "class-methods-use-this": "off",
    "camelcase": "off",
    "consistent-return": "off",
    "no-param-reassign": "warn",
    "max-len": [
      2,
      180,
      2,
      {
        "ignoreUrls": true
      }
    ],
    "radix": "off",
    "no-multi-str": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "linebreak-style": "off"
  }
}
